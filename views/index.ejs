                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First name</th>
                            <th scope="col">Last name</th>
                            <th scope="col">Phone number</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < contactItems.length; i++) { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= contactItems[i].first_name %></td>
                            <td><%= contactItems[i].last_name %></td>
                            <td><%= contactItems[i].phone_number %></td>
                            <td>
                                <form id="formDelete" action="/delete-contact" method="POST">
                                    <div class="delete-btn">
                                        <input type="hidden" value="<%= contactItems[i].id %>" name="contactDelete">
                                        <!-- <div class="d-inline p-2 bg-primary text-white">d-inline</div> -->
                                        <button type="submit" class="fas fa-trash-alt"></button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                        <% } %>
